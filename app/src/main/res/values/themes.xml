<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RNote" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/gray_five</item>
        <item name="colorOnSecondary">@color/gray</item>
    </style>

    <style name="Theme.RNote" parent="Base.Theme.RNote" />

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">220dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RectangleCornerRadius" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="shapeNew" parent="">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
    </style>

    <style name="shapeNewTwo" parent="">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">42dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">42dp</item>
    </style>

    <style name="shapeNewThree" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="FullscreenDialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>

    </style>

</resources>
